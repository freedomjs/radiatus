<% layout('layout') -%>

<% for (var i=0; i<message.length; i++) { %>
  <small class="error"><%= message[i] %></small>
<% } %>

<div class='row'>
  <div class='large-6 columns shadedbox'>
    <form action='/radiatus/auth/login' method='post'>
      <h3>Log in</h3>
      <input type='hidden' name='_csrf' value='<%= csrf %>'>
      <div class='row'>
        <div class='large-6 columns'>
          <input type='text' name='username' placeholder='Username'>
        </div>
        <div class='large-6 columns'>
          <input type='password' name='password' placeholder='Password'>
        </div>
      </div>
      <div class='row'>
        <div class='large-12 columns'>
          <button class='submit'>Log In</button>
        </div>
      </div>
    </form>
  </div>

  <div class='large-6 columns shadedbox'>
    <span class="warning label">
    <p>
      IMPORTANT: <br>
      * This is loaded over unencrypted HTTP. <br>
      * DO NOT reuse passwords from other accounts. <br>
      * This service is under active development. <br>
      * Accounts and data may be cleared periodically.
    </p>
    </span>
  </div>

</div>

<div class='row'>
  <div class='large-6 columns shadedbox'>
    <h3>Sign up for a new account</h3>
    <form action='/radiatus/auth/signup' method='post'>
      <input type='hidden' name='_csrf' value='<%= csrf %>'>
      <div class='row'>
        <div class='large-6 columns'>
          <input type='text' name='givenName' placeholder='First name'>
        </div>
        <div class='large-6 columns'>
          <input type='text' name='familyName' placeholder='Last name'>
        </div>
      </div>
      <div class='row'>
        <div class='large-12 columns'>
          <input type='text' name='username' placeholder='Username'>
        </div>
      </div>
      <div class='row'>
        <div class='large-12 columns'>
          <input type='password' name='password' placeholder='Password'>
        </div>
      </div>
      <div class='row'>
        <div class='large-12 columns'>
          <button class='submit'>Sign Up</button>
        </div>
      </div>
    </form>
  </div>

</div>
